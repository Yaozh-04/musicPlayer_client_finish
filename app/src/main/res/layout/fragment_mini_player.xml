<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:elevation="8dp">

    <ImageView
        android:id="@+id/mini_player_cover"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_note" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            android:id="@+id/mini_player_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲名"
            android:textStyle="bold"
            android:textSize="15sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/mini_player_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌手"
            android:textSize="13sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/mini_player_prev"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_skip_previous"
        android:contentDescription="上一首" />

    <ImageButton
        android:id="@+id/mini_player_play_pause"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_play_arrow"
        android:contentDescription="播放/暂停" />

    <ImageButton
        android:id="@+id/mini_player_next"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_skip_next"
        android:contentDescription="下一首" />
</LinearLayout> 