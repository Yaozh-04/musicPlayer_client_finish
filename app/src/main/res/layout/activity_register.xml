<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/apple_music_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="32dp">

            <!-- 标题 -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#222222"
                android:layout_marginTop="80dp"
                android:layout_gravity="center_horizontal"/>

            <!-- 账号输入块 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/usernameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="账号"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_music_bg"
                app:boxStrokeColor="@color/apple_music_red"
                app:hintTextColor="@color/apple_music_red"
                app:indicatorColor="@color/apple_music_red"
                app:startIconDrawable="@drawable/ic_user"
                app:startIconTint="@color/apple_music_red"
                android:layout_marginTop="40dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColorHint="@color/apple_music_red"
                    android:textColor="@color/apple_music_text_main"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 昵称输入块 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/nicknameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="昵称"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_music_bg"
                app:boxStrokeColor="@color/apple_music_red"
                app:hintTextColor="@color/apple_music_red"
                app:indicatorColor="@color/apple_music_red"
                app:startIconDrawable="@drawable/ic_nickname"
                app:startIconTint="@color/apple_music_red"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:textColorHint="@color/apple_music_red"
                    android:textColor="@color/apple_music_text_main"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 手机号输入块 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/phoneLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="手机号"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_music_bg"
                app:boxStrokeColor="@color/apple_music_red"
                app:hintTextColor="@color/apple_music_red"
                app:indicatorColor="@color/apple_music_red"
                app:startIconDrawable="@drawable/ic_phone"
                app:startIconTint="@color/apple_music_red"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="phone"
                    android:textColorHint="@color/apple_music_red"
                    android:textColor="@color/apple_music_text_main"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 性别选择 -->
            <LinearLayout
                android:id="@+id/genderLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textColor="@color/apple_music_red"
                    android:textSize="16sp"
                    android:layout_marginEnd="16dp"/>
                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <RadioButton
                        android:id="@+id/rbMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:textColor="@color/apple_music_text_main"/>
                    <RadioButton
                        android:id="@+id/rbFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        android:textColor="@color/apple_music_text_main"
                        android:layout_marginStart="16dp"/>
                    <RadioButton
                        android:id="@+id/rbOther"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="保密"
                        android:textColor="@color/apple_music_text_main"
                        android:layout_marginStart="16dp"/>
                </RadioGroup>
            </LinearLayout>

            <!-- 生日输入块 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/birthdayLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="生日"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_music_bg"
                app:boxStrokeColor="@color/apple_music_red"
                app:hintTextColor="@color/apple_music_red"
                app:indicatorColor="@color/apple_music_red"
                app:startIconDrawable="@drawable/ic_birthday"
                app:startIconTint="@color/apple_music_red"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColorHint="@color/apple_music_red"
                    android:textColor="@color/apple_music_text_main"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 密码输入块 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/passwordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="密码"
                app:endIconMode="password_toggle"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_music_bg"
                app:boxStrokeColor="@color/apple_music_red"
                app:hintTextColor="@color/apple_music_red"
                app:indicatorColor="@color/apple_music_red"
                app:startIconDrawable="@drawable/ic_password"
                app:startIconTint="@color/apple_music_red"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="textPassword"
                    android:textColorHint="@color/apple_music_red"
                    android:textColor="@color/apple_music_text_main"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 确认密码输入块 -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/confirmPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="确认密码"
                app:endIconMode="password_toggle"
                app:boxBackgroundMode="filled"
                app:boxBackgroundColor="@color/apple_music_bg"
                app:boxStrokeColor="@color/apple_music_red"
                app:hintTextColor="@color/apple_music_red"
                app:indicatorColor="@color/apple_music_red"
                app:startIconDrawable="@drawable/ic_password"
                app:startIconTint="@color/apple_music_red"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="56dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:inputType="textPassword"
                    android:textColorHint="@color/apple_music_red"
                    android:textColor="@color/apple_music_text_main"
                    android:background="@android:color/transparent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- 协议勾选 -->
            <CheckBox
                android:id="@+id/cbAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意《服务协议》和《隐私政策》"
                android:textColor="@color/apple_music_text_main"
                android:layout_marginTop="24dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

            <!-- 注册按钮 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="注册"
                android:textColor="@color/apple_music_button_text"
                android:textStyle="bold"
                android:textSize="18sp"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/apple_music_red"
                android:layout_marginTop="48dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"/>

            <!-- 去登录 -->
            <TextView
                android:id="@+id/btnToLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已有账号？去登录"
                android:textColor="@color/apple_music_red"
                android:textSize="14sp"
                android:textStyle="normal"
                android:gravity="center"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 